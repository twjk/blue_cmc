<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:aop="http://www.springframework.org/schema/aop"
	xmlns:context="http://www.springframework.org/schema/context"
	xmlns:tx="http://www.springframework.org/schema/tx"
	xsi:schemaLocation="
		http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.2.xsd   
        http://www.springframework.org/schema/aop http://www.springframework.org/schema/aop/spring-aop-3.2.xsd
        http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.2.xsd 
        http://www.springframework.org/schema/tx http://www.springframework.org/schema/tx/spring-tx-3.2.xsd"
	default-autowire="byName">
	
 	<!-- 从properties文件加载配置信息 -->
	<bean id="propertyPlaceholderConfigurer" class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
		<property name="locations">
			<list>
				<value>classpath:application.properties</value>
				<value>classpath:job.properties</value>
			</list>
		</property>
	</bean>

 	<!-- 数据源 -->
 	<!-- https://github.com/alibaba/druid/wiki/%E5%B8%B8%E8%A7%81%E9%97%AE%E9%A2%98 -->
	<bean id="dataSource"
		class="com.alibaba.druid.pool.DruidDataSource"
		init-method="init" destroy-method="close">
		<!-- 基本属性 -->
		<property name="url" value="${db.connection.url}" />
		<property name="username" value="${db.connection.username}" />
		<property name="password" value="${db.connection.password}" />
		<property name="filters" value="config,stat" />
		<!-- 密码加密 -->
		<property name="connectionProperties" value="config.decrypt=true;config.decrypt.key=${db.connection.publickey}" />
		
		<!-- 配置初始化大小、最小、最大 -->
		<property name="initialSize" value="${db.pool.initialSize}" />
		<property name="minIdle" value="${db.pool.minIdle}" />
		<property name="maxActive" value="${db.pool.maxActive}" />
		
		<!-- 配置获取连接等待超时的时间 -->
		<property name="maxWait" value="${db.pool.maxWait}" />
		
		<property name="removeAbandoned" value="${db.pool.removeAbandoned}" /> 					<!-- 打开回收连接功能；对性能有些影响，怀疑存在泄漏之后再打开 -->
		<property name="removeAbandonedTimeout" value="${db.pool.removeAbandonedTimeout}" /> 	<!-- 1800秒，也就是30分钟 -->
		<property name="logAbandoned" value="true" /> 				<!-- 关闭abanded连接时输出错误日志 -->
  	
		<property name="testWhileIdle" value="true" />
		<property name="testOnBorrow" value="false" />
		<property name="testOnReturn" value="false" />		
        <property name="validationQuery" value="select 1"/>		
      	<property name="timeBetweenEvictionRunsMillis" value="60000" /> <!-- 空闲时间大于该值，执行validationQuery检测连接是否有效，单位是毫秒 -->
		<property name="minEvictableIdleTimeMillis" value="300000" />	<!-- Destory线程中如果检测到当前连接的最后活跃时间和当前时间的差值大于该值，则关闭当前连接，单位是毫秒 -->
	</bean>
	
	<bean id="sessionFactory"
		class="org.springframework.orm.hibernate3.LocalSessionFactoryBean">
		<property name="dataSource" ref="dataSource"></property>
		<property name="hibernateProperties">
			<props>
				<prop key="hibernate.show_sql">${hibernate.showsql}</prop>
				<prop key="hibernate.format_sql">${hibernate.formatsql}</prop>
				<prop key="hibernate.dialect">${hibernate.dialect}</prop>
				<prop key="hibernate.jdbc.batch_size">${hibernate.batchsize}</prop>
			</props>
		</property>
		<property name="mappingLocations">
			<list>
				<value>classpath:/com/qcmz/cmc/entity/*.hbm.xml</value>
			</list>
		</property>
	</bean>
	
	<tx:annotation-driven proxy-target-class="true" transaction-manager="transactionManager" />
	<bean id="transactionManager" class="org.springframework.orm.hibernate3.HibernateTransactionManager">
        <property name="sessionFactory" ref="sessionFactory"/>
    </bean>
	<aop:config proxy-target-class="true">
		<aop:pointcut id="fooServiceMethods" expression="execution(* com.qcmz.cmc.service.*.*(..))" />
		<aop:advisor advice-ref="txAdvice" pointcut-ref="fooServiceMethods" />
	</aop:config>
	<tx:advice id="txAdvice" transaction-manager="transactionManager">
		<tx:attributes>
			<tx:method name="get*" read-only="true" />
			<tx:method name="query*" read-only="true" />
			<tx:method name="qry*" read-only="true" />
			<tx:method name="load*" read-only="true" />
			<tx:method name="find*" read-only="true" />
			<tx:method name="*" />
		</tx:attributes>
	</tx:advice>

	<!-- 自动装配bean -->
	<context:component-scan base-package="com.qcmz.framework.dao.impl" />
	<context:component-scan base-package="com.qcmz.framework.service.impl" />
	<context:component-scan base-package="com.qcmz.cmc.config" />
	<context:component-scan base-package="com.qcmz.cmc.dao.hibernate" />
	<context:component-scan base-package="com.qcmz.cmc.service.impl" />
	<context:component-scan base-package="com.qcmz.cmc.thrd" />
	<context:component-scan base-package="com.qcmz.cmc.cache" />
	<context:component-scan base-package="com.qcmz.cmc.proxy" />
	<context:component-scan base-package="com.qcmz.cmc.process" />
	<context:component-scan base-package="com.qcmz.cmc.job" />
	<context:component-scan base-package="com.qcmz.cmc.web.action" />
	<context:component-scan base-package="com.qcmz.cmc.ws.provide.service" />
	<context:component-scan base-package="com.qcmz.cmc.ws.provide.webservice.impl" />
	<context:component-scan base-package="com.qcmz.cmc.ws.provide.action" />

	<!-- AOP -->
	<aop:aspectj-autoproxy />
	<!-- 日志 -->
	<bean id="logAspect" class="com.qcmz.framework.util.log.LogAspect"/>
	<aop:config proxy-target-class="true">
		<aop:pointcut id="wsactionPointcut" expression="execution(String com.qcmz.cmc.ws.provide.action..*.*())" />
		<aop:pointcut id="interfacePointcut" expression="execution(* com.qcmz.cmc.ws.provide.service..*.*(..))" />
		<aop:aspect id="logAopAspect" ref="logAspect">
			<aop:before method="saveAccessLog" pointcut-ref="wsactionPointcut"/>
			<aop:around method="saveInterfaceLog" pointcut-ref="interfacePointcut"/>
		</aop:aspect>
	</aop:config>
	
	<!-- 权限 -->
	<import resource="classpath:com/qcmz/srm/client/srm.xml"/>
	<!-- 接口 -->
	<import resource="applicationContext-interface.xml"/>
	<import resource="classpath:org/codehaus/xfire/spring/xfire.xml"/>
	<!-- 定时任务 -->
	<import resource="applicationContext-job.xml"/>

	<bean id="springUtil" class="com.qcmz.framework.util.SpringUtil" />
</beans>